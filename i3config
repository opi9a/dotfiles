#exec --no-startup-id i3-msg 'workspace 2; exec keepassx' 
#exec --no-startup-id i3-msg 'workspace 2; exec xi3-sensible-terminal' 

# app startups
bindsym Mod4+Shift+f exec firefox
bindsym Mod4+Shift+p exec keepassxc
# 


# rescue display to hdmi out
bindsym Mod4+Shift+x exec xrandr --output HDMI1 --auto

# rescue display
bindsym Mod4+x exec xrandr --output eDP1 --auto
